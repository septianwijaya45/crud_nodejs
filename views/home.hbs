<div class="row">
  <div class="col-md-12">
    <div class="col-6"><h3>Users</h3></div>
    <div class="col-12 d-flex justify-content-end">
      <a href="/user/add-user" class="btn btn-primary">Add User</a>
      <a href="/user" class="btn btn-success">Reflesh</a>
    </div>
  </div>
</div>

<table class="table table-bordered">
  <thead class="table-dark">
    <tr>
      <th scope="col">ID</th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Email</th>
      <th scope="col">Phone</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>

    {{!-- opening loop data --}}
    {{#each rows}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.first_name}}</td>
      <td>{{this.last_name}}</td>
      <td>{{this.email}}</td>
      <td>{{this.phone}}</td>
      <td>
          <a href="" type="button" class="btn btn-light btn-small"><i class="bi bi-eye"></i> View</a>
          <a href="/user/edit-user/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil-square"></i> Edit</a>
          <a href="" type="button" class="btn btn-light btn-small"><i class="bi bi-trash"></i> Delete</a>
      </td>
    </tr>
    {{!-- closing loop data --}}
    {{/each}}
  </tbody>
</table>